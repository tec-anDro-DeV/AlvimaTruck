<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descTV"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/sansbold"
        android:gravity="center"
        android:text="@string/accurate_orders_happy_customers"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:textSize="@dimen/_24ssp" />


    <TextView
        android:id="@+id/descTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_21sdp"
        android:layout_marginBottom="@dimen/_95sdp"
        android:fontFamily="@font/sansregular"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />


</RelativeLayout>