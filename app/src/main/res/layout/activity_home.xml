<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/orange">

    <!--    &lt;!&ndash;    &lt;!&ndash; Background image (truck and city) &ndash;&gt;&ndash;&gt;-->
    <!--    <ImageView-->
    <!--        android:id="@+id/bgImage"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/_360sdp"-->
    <!--        android:scaleType="centerCrop"-->
    <!--        android:src="@drawable/loginbg" />-->

    <!-- White curved container -->

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_21sdp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanssemibold"
            android:text="Kaivan Desai"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvUsername"
            android:fontFamily="@font/sansbold"
            tools:text="30 Oct, 2025"
            android:textColor="@color/white"
            android:textSize="@dimen/_19ssp" />

        <RelativeLayout
            android:id="@+id/rlSync"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toStartOf="@+id/rlLogout"
            android:background="@drawable/transparent_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_sync" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLogout"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_logout" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        android:background="@drawable/bg_white_top_curve"
        android:orientation="vertical"
        android:padding="@dimen/_21sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_118sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_sale_route"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:id="@+id/tvSalesRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="Sales Route"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_118sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_customer"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:id="@+id/tvCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="Customer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_118sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_vehicale_breakdown"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:id="@+id/tvVehicleBreakdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="Vehicle Breakdown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_118sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_report"
                android:padding="@dimen/_14sdp">

                <TextView
                    android:id="@+id/tvReportModules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="Report Modules"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/box1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_84sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_box"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_7sdp">

                <TextView
                    android:id="@+id/tvTodaySales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="$1560"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansregular"
                        android:text="Today’s"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansbold"
                        android:text=" Sales"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/box2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_84sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_box"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_7sdp">


                <TextView
                    android:id="@+id/tvTodayVisit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="45"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansregular"
                        android:text="Today’s"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansbold"
                        android:text=" Visit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_84sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/ic_box"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_3sdp"
                android:paddingVertical="@dimen/_7sdp">


                <TextView
                    android:id="@+id/tvTodayPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sanssemibold"
                    android:text="$165451"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansregular"
                        android:text="Today’s"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/sansbold"
                        android:maxLines="1"
                        android:text=" Payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_21sdp"
        android:background="@drawable/round_home_bottom"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <RelativeLayout
            android:id="@+id/rlBottomHome"
            android:layout_width="@dimen/_49sdp"
            android:layout_height="@dimen/_49sdp"
            android:background="@drawable/orange_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_home" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottomTrip"
            android:layout_width="@dimen/_49sdp"
            android:layout_height="@dimen/_49sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_trip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottomVanStock"
            android:layout_width="@dimen/_49sdp"
            android:layout_height="@dimen/_49sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_van_stock" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBottomOpreation"
            android:layout_width="@dimen/_49sdp"
            android:layout_height="@dimen/_49sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_opreation" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>