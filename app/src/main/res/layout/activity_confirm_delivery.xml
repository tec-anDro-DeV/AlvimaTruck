<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_21sdp">

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/transparent_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sanssemibold"
            android:text="Confirm Delivery"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        android:background="@drawable/bg_white_top_curve"
        android:orientation="vertical"
        android:padding="@dimen/_21sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sanssemibold"
            android:text="Delivery photo (parcel/site)*"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />


        <RelativeLayout
            android:id="@+id/rlChoosePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/ic_dash_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_file_upload" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDeliveryPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:visibility="gone">

            <com.alvimatruck.custom.RoundedImageView
                android:id="@+id/ivIDProof"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_108sdp"
                android:scaleType="centerCrop"
                app:cornerRadius="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/btnDeleteDeliveryProof"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/orange_circle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_delete" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/sanssemibold"
                android:text="Signature*"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/btnClearSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:fontFamily="@font/sansregular"
                android:text="CLEAR"
                android:textColor="@color/orange"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>


        <com.alvimatruck.custom.SignatureView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_108sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/input_bg" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/sanssemibold"
            android:text="Remarks (Optional)"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />


        <EditText
            android:id="@+id/etRemark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_94sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/sansregular"
            android:gravity="top"
            android:hint="Enter Remark"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/hintGary"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_21sdp"
            android:background="@drawable/rounded_button_orange"
            android:fontFamily="@font/sansbold"
            android:gravity="center"
            android:padding="@dimen/_14sdp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>
</RelativeLayout>