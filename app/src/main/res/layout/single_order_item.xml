<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="detail"
            type="com.alvimatruck.model.responses.OrderDetail" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:orientation="vertical"
        android:padding="@dimen/_9sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stock" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_toEndOf="@id/ivStock"
                android:fontFamily="@font/sansbold"
                android:text="@{detail.id}"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                tools:text="Order ID" />

            <TextView
                android:id="@+id/tvContactName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOrderId"
                android:layout_marginStart="@dimen/_11sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_toStartOf="@+id/tvStatus"
                android:layout_toEndOf="@id/ivStock"
                android:ellipsize="end"
                android:fontFamily="@font/sansregular"
                android:maxLines="2"
                android:text="@{detail.customerName}"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:text="John Doe" />


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_status_green"
                android:fontFamily="@font/sanssemibold"
                android:paddingVertical="@dimen/_5sdp"
                tools:text="Delivered"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_9sdp"
            android:background="@drawable/border_bg"
            android:orientation="vertical"
            android:padding="@dimen/_7sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:text="Route Name"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sansbold"
                    android:text="@{detail.routeName}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:text="Route 1" />
            </RelativeLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:layout_marginTop="@dimen/_7sdp">-->

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:fontFamily="@font/sansregular"-->
            <!--                    android:text="Customer Name"-->
            <!--                    android:textColor="@color/darkGray"-->
            <!--                    android:textSize="@dimen/_12ssp" />-->

            <!--                <TextView-->
            <!--                    android:layout_marginStart="@dimen/_5sdp"-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:textAlignment="textEnd"-->
            <!--                    android:layout_weight="1"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_alignParentEnd="true"-->
            <!--                    android:fontFamily="@font/sansbold"-->
            <!--                    tools:text="Customer Name"-->
            <!--                    android:text="@{detail.customerName}"-->
            <!--                    android:textColor="@color/black"-->
            <!--                    android:textSize="@dimen/_12ssp" />-->
            <!--            </LinearLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sansregular"
                    android:text="Order Date"
                    android:textColor="@color/darkGray"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sansbold"
                    android:text="@{detail.requestDate}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    tools:text="16 Dec 2025" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/sansregular"
                android:text="Order Amount"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/sansbold"
                android:text="@{detail.subTotal()}"
                android:textColor="@color/orange"
                android:textSize="@dimen/_12ssp"
                tools:text="$146.00" />
        </RelativeLayout>


    </LinearLayout>


</layout>