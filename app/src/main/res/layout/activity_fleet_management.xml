<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_21sdp">

        <RelativeLayout
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/transparent_circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sanssemibold"
            android:text="Fleet Services"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTop"
        android:background="@drawable/bg_white_top_curve"
        android:orientation="vertical"
        android:padding="@dimen/_21sdp">

        <RelativeLayout
            android:id="@+id/rlFuelRefillRequest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_73sdp"
            android:background="@drawable/ic_fuel_refill">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="@font/sanssemibold"
                android:text="Fuel Refill\nRequest"

                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlRepairLog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_73sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/ic_transfer2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="@font/sanssemibold"
                android:text="Repair Log"

                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlIncidentReporting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_73sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/ic_transfer3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_70sdp"
                android:fontFamily="@font/sanssemibold"
                android:text="Incident\nReporting"

                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/sansregular"
                    android:text="Recent Logs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tvSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:fontFamily="@font/sansregular"
                    android:text="See all"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/input_bg"
                android:orientation="vertical"
                android:padding="@dimen/_9sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_transfer_small" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_11sdp"
                        android:layout_toEndOf="@id/ivStock"
                        android:fontFamily="@font/sansbold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        tools:text="Req No. - 13456" />


                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="@dimen/_72sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_status_red"
                        android:fontFamily="@font/sanssemibold"
                        android:paddingVertical="@dimen/_5sdp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11ssp"
                        tools:text="Pending" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_9sdp"
                    android:background="@drawable/border_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sansregular"
                            android:text="Request type"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvFleetType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/sansbold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            tools:text="Fuel Refill" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/rlVendor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/sansregular"
                            android:text="Vendor"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvVendorDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:fontFamily="@font/sansbold"
                            android:text="@{detail.repairLogVendorDetail}"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            tools:text="ABCD" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rlDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sansregular"
                            android:text="Description"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sansbold"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            tools:text="ABCD" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_7sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sansregular"
                            android:text="Requested Date"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tvRequestDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/sansbold"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            tools:text="12 Dec 2025" />
                    </RelativeLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansregular"
                        android:text="Total Cost"
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sansbold"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12ssp"
                        tools:text="$200.00" />
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/llType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sansregular"
                        android:text="Incident Type"
                        android:textColor="@color/darkGray"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvIncidentType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:autoSizeMinTextSize="@dimen/_1sdp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/sansbold"
                        android:maxLines="2"
                        android:textAlignment="textEnd"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12ssp"
                        tools:text="Breakdown / Mechanical Issue" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>