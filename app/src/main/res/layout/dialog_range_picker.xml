<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
        android:id="@+id/dateRangeCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_14sdp"
        app:default_date_color="@color/black"
        app:disable_date_color="@color/gray"
        app:range_color="@color/orange"
        app:range_date_color="@color/white"
        app:selected_date_circle_color="@color/orange"
        app:selected_date_color="@color/white"
        app:text_size_date="@dimen/_14ssp"
        app:text_size_title="@dimen/_16ssp"
        app:text_size_week="@dimen/_12ssp"
        app:title_color="@color/black"
        app:week_color="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:fontFamily="@font/sansbold"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/orange"
            android:fontFamily="@font/sansbold"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>


</LinearLayout>